{
    "display": "Default",
    "compilerOptions": {
        // 开启的特性
        //
        // 兼容 babel 模块导入的模式（不需要 * as）
        "esModuleInterop": true,
        // 支持引入 json 模块
        "resolveJsonModule": true,
        // React 项目需要配置此项
        "jsx": "react-jsx",
        // 禁止导入模块时大小写错误
        "forceConsistentCasingInFileNames": true,
        /* 如果设为true，编译每个ts文件之后会生成一个js文件和一个声明文件 */
        /* declaration和allowJs不能同时设为true */
        "declaration": false,
        // 值为true或false，指定是否为声明文件.d.ts生成map文件
        "declarationMap": false,
        // inlineSourceMap指定是否将map文件内容和js文件编译在一个同一个js文件中，如果设为true,则map的内容会以//#soureMappingURL=开头，然后接base64字符串的形式插入在js文件底部
        "inlineSourceMap": false,
        // inlineSources用于指定是否进一步将ts文件的内容也包含到输出文件中
        "inlineSources": false,
        // 不生成编译文件
        "noEmit": true,
        // 允许导入 TypeScript 扩展名的模块
        "allowImportingTsExtensions": true,
        // 启用独立模块编译
        "isolatedModules": true,

        // 生成文件的配置
        //
        // 指定生成文件的 ECMAScript 版本
        "target": "es2020",
        // 指定生成哪个模块系统代码
        "module": "esnext",
        // 决定如何处理模块
        "moduleResolution": "bundler",
        // 编译的时候删除注释
        "removeComments": true,
        // 用于检查switch中是否有case没有使用break跳出switch
        "noFallthroughCasesInSwitch": true,

        // ! 必须开，experimentalDecorators用于指定是否启用实验性的装饰器特性
        "experimentalDecorators": true,

        // 生成的文件的换行符
        "newLine": "lf",
        "emitDecoratorMetadata": true,

        // stdout 输出
        //
        // 给错误和消息设置样式，使用颜色和上下文
        "pretty": true,
        "skipLibCheck": true,

        // 严格模式，可选择性的开启，建议开启的越多越好
        //
        // 严格模式
        "strict": true,
        // 若有未使用的局部变量则抛错
        "noUnusedLocals": true,
        // 若有未使用的参数则抛错
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "strictBindCallApply": true,
        "strictNullChecks": true
    }
}